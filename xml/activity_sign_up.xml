<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/blueshade"
    tools:context=".SignUp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="160dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="47dp"
            android:layout_marginBottom="75dp"
            android:text="Create your"
            android:textColor="@color/white"
            android:textSize="32dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="90dp"
            android:layout_marginBottom="26dp"
            android:text="Account"
            android:textColor="@color/white"
            android:textSize="32dp"
            android:textStyle="bold" />

    </RelativeLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="48dp"
        android:elevation="12dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="20dp"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Full Name"
                android:textStyle="bold"
                android:textColor="@color/blue"
                android:textSize="18dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:hint="N Durga Prasad"
                android:id="@+id/etSignUpFullName"
                android:inputType="text"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:text="Gmail"
                android:textStyle="bold"
                android:textColor="@color/blue"
                android:textSize="18dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:hint="prasad@gmail.com"
                android:id="@+id/etSignUpEmail"
                android:inputType="textEmailAddress"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:text="Password"
                android:textStyle="bold"
                android:textColor="@color/blue"
                android:textSize="18dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:id="@+id/etSignUpPassword"
                android:inputType="textPassword"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:text="Confirm Password"
                android:textStyle="bold"
                android:textColor="@color/blue"
                android:textSize="18dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:id="@+id/etSignUpConfirmPassword"
                android:inputType="textPassword"
                />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Submit"
                android:layout_marginHorizontal="32dp"
                android:layout_marginTop="36dp"
                android:id="@+id/btnSignUpSubmit"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Already have an Account?"
                android:textAlignment="textEnd"
                android:layout_marginTop="18dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Login"
                android:textAlignment="textEnd"
                android:textStyle="bold"
                android:textSize="16dp"
                android:id="@+id/tvLogin"
                />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>