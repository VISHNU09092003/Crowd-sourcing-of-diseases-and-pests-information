<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PreLogin"
    android:background="@drawable/blueshade"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="50dp">
    <LinearLayout
        android:id="@+id/topLinear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="40dp"
        >
        <ImageButton
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/farmer"
            android:scaleType="fitXY"
            android:id="@+id/btnFarmer"
            android:layout_marginStart="30dp"
            />
        <ImageButton
            android:id="@+id/btnExpert"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="110dp"
            android:src="@drawable/expert"
            android:scaleType="fitXY"
            />
    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Farmers"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:layout_marginLeft="70dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Experts"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:layout_marginLeft="110dp"
                />
        </LinearLayout>
    </LinearLayout>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="550dp"
        app:cardElevation="20dp"
        app:cardCornerRadius="42dp"
        android:layout_alignParentBottom="true"
        android:layout_alignBottom="@+id/topLinear"
        >

    </androidx.cardview.widget.CardView>
</RelativeLayout>