<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_margin="20dp"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ExpertMain">
    <TextView
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Expert"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:layout_margin="20dp"
        android:textSize="35sp"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:elevation="10dp"
        android:layout_marginStart="30dp"
        android:layout_width="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/writeArticle"
            android:src="@drawable/write_article"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="fitXY" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Write Article"
            android:textSize="20sp"
            android:layout_marginTop="110dp"
            />
    </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:elevation="10dp"
            android:layout_marginStart="100dp"
            android:layout_width="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/approveArticle"
                android:src="@drawable/approve_article"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:scaleType="fitXY"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Approve Articles"
                android:textSize="20sp"
                android:layout_marginTop="110dp"
                />
        </androidx.cardview.widget.CardView>
    </LinearLayout>
    <androidx.cardview.widget.CardView
        android:layout_marginVertical="40dp"
        android:elevation="10dp"
        android:layout_marginStart="30dp"
        android:layout_width="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content">

        <ImageButton
            android:src="@drawable/solution"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/solution"
            android:scaleType="fitXY"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reports"
            android:textSize="20sp"
            android:layout_marginTop="110dp"
            />
    </androidx.cardview.widget.CardView>

</LinearLayout>